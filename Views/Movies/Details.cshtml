@model IEnumerable<CinemaApp.ViewModels.MovieGenreViewModel>


@foreach (var movie in Model)
{

    @: @{
        var photoPath = "~/Photo/" + (movie.Movie.PhotoPath ?? "noimage.jpg");
    }
    <h2> Movie </h2>
    <p>
        <a asp-action="Index">Inapoi la filme</a>
    </p>
    <div class="block">
        <div class="left movie-content-left">
            <img class="card-img-top" src="@photoPath" style="max-height: 150px;min-height: 150px; max-width:190px; min-width:50px;" asp-append-version="true" alt="movie image-cap" />

            <div class="movie-name info">
                <h4>
                    @movie.Name
                </h4>
                <span>
                    @movie.DateAdded
                </span>

            </div>
        </div>

        <div class="right movie-content-right">
            <div class="movie-landing-content">
                <h1 class="ml-2">@movie.Name</h1>
                <p class="ml-2">@movie.Description</p>
                <div class="summary">
                    <div class="leftSide">
                        Gen
                    </div><div class="rightSide">
                        @movie.GenreName
                    </div><div class="clear">

                    </div><div class="leftSide">
                        Data publicarii
                    </div><div class="rightSide">
                        @movie.ReleaseDate
                    </div><div class="clear">
                    </div>


                </div>
            </div>

            <div class="video" id="trailer">
                <script>
                    setTimeout(function () {
                        searchMovie('@movie.Name')
                        debugger;
                    }, 500);
                </script>


            </div>
        </div>
        <div class="clear"></div>
    </div>
}


































